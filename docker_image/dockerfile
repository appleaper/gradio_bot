# 使用 Python 3.10.9 官方镜像作为基础镜像
FROM python:3.10.9-slim

# 设置工作目录
WORKDIR /app

# 安装系统级依赖
RUN apt-get update && apt-get install -y \
    build-essential \
    wget \
    && rm -rf /var/lib/apt/lists/*

# 复制并安装 Python 依赖
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 安装 wheel 文件
RUN wget http://thunlp.oss-cn-qingdao.aliyuncs.com/multi_modal/never_delete/modelscope_studio-0.4.0.9-py3-none-any.whl
RUN pip install --no-cache-dir modelscope_studio-0.4.0.9-py3-none-any.whl

# 暴露端口（假设你的应用监听 7680 端口，可按需修改）
EXPOSE 7680
